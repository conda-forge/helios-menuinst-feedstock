{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://schemas.conda.io/menuinst-1.schema.json",
    "menu_name": "Helios++",
    "menu_items": [
      {
        "name": "Helios++ Jupyter Session",
        "description": "A Jupyter session with Helios++",
        "activate": true,
        "command": ["jupyter", "lab"],
        "terminal": true,
        "platforms": {
          "linux": {
            "icon": "{{ PREFIX }}/Menu/3dgeo.png"
          },
          "osx": {},
          "win": {
            "icon": "{{ PREFIX }}/Menu/3dgeo.ico",
            "working_dir": "%USERPROFILE%"
          }
        }
      },
      {
        "name": "Helios++ Terminal Session",
        "description": "A terminal session with Helios++",
        "activate": true,
        "terminal": true,
        "working_dir": "%USERPROFILE%",
        "command": [
          "%windir%\\system32\\cmd.exe",
          "/K",
          "CALL \"{{ PREFIX }}\\Scripts\\activate.bat\" & ECHO Helios++ environment successfully activated, above error message is a known issue (see https://github.com/conda/conda/issues/14884)"
        ],
        "icon": "{{ PREFIX }}/Menu/3dgeo.ico",
        "platforms": {
          "win": {}
        }
      }
    ]
  }
  